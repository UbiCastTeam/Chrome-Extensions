{
    "name" : "Ubicast Screen Capturing",
    "author": "St√©phane Schoorens forked from Muaz Khan",
    "version" : "1",
    "manifest_version" : 2,
    "minimum_chrome_version": "51",
    "description" : "Capture full-screen or specific application's screen on any ubicast domains",
    "homepage_url": "https://ubicast.tv/",
    "background": {
        "scripts": ["background-script.js"],
        "persistent": false
    },
    "content_scripts": [ {
       "js": [ "content-script.js" ],
       "all_frames": true,
       "run_at": "document_end",
       "matches": ["*://ubicast.tv/*", "*://ubicast.eu/*", "*://ubicast.net/*", "*://*.ubicast.tv/*", "*://*.ubicast.eu/*", "*://*.ubicast.net/*", "*://localhost/*"]
    }],
    "icons" : {
        "48" : "icon.png"
    },
    "permissions": [
        "desktopCapture"
    ],
    "web_accessible_resources": [
        "icon.png"
    ]
}